<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1>The Cocktails App</h1>
    <p>Awesome beverages for developers nightlife</p>

  </div>
</div>

<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="row">
    <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link'%></h2>
  </div>
  <% end %>
</div>


<%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary btn-lg"%>
